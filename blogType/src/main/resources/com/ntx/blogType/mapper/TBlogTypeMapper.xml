<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ntx.blogType.mapper.TBlogTypeMapper">


    <select id="getTypeById" resultType="com.ntx.blogType.domain.TBlogType">


        select * from t_blog_type
        <where>
            id = #{id}
        </where>

    </select>
    <select id="getByIds" resultType="com.ntx.blogType.domain.TBlogType">
        select id, name from t_blog_type
        <where>
            id in
            <foreach collection="ids" item="id" open="(" close=")" separator=",">
                #{id}
            </foreach>
        </where>
    </select>
    <select id="queryBlogPage" resultType="com.ntx.blogType.domain.TBlogType">
        select * from t_blog_type
                 <where>
                    <if test="name.length > 0">
                        name like #{name}
                    </if>
                 </where>
                 limit #{start}, #{pageSize}
    </select>
</mapper>
